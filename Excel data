import org.apache.poi.ss.usermodel.*;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

public class ExcelColumnValueSearch {
    public static void main(String[] args) {
        // Path to the Excel file
        String filePath = "your_excel_file.xlsx";

        // Sheet name to search
        String sheetName = "Sheet1";

        // Column name to retrieve values from
        String columnName = "Column1";

        // Retrieve values from Excel column
        List<String> stringValues = getColumnValues(filePath, sheetName, columnName, CellType.STRING);
        List<Double> numericValues = getColumnValues(filePath, sheetName, columnName, CellType.NUMERIC);
        List<Boolean> booleanValues = getColumnValues(filePath, sheetName, columnName, CellType.BOOLEAN);

        // Print the retrieved values
        System.out.println("String Values: " + stringValues);
        System.out.println("Numeric Values: " + numericValues);
        System.out.println("Boolean Values: " + booleanValues);
    }

    /**
     * Retrieve values from a specified column in an Excel sheet.
     *
     * @param filePath   Path to the Excel file.
     * @param sheetName  Name of the sheet in the Excel file.
     * @param columnName Name of the column to retrieve values from.
     * @param cellType   Type of cells to retrieve (STRING, NUMERIC, BOOLEAN, etc.).
     * @return List of values retrieved from the specified column.
     */
    private static List<Object> getColumnValues(String filePath, String sheetName, String columnName, CellType cellType) {
        List<Object> columnValues = new ArrayList<>();

        try (FileInputStream fileInputStream = new FileInputStream(new File(filePath));
             Workbook workbook = WorkbookFactory.create(fileInputStream)) {

            // Get the sheet by name
            Sheet sheet = workbook.getSheet(sheetName);
            if (sheet == null) {
                System.out.println("Sheet not found!");
                return columnValues;
            }

            // Get the header row to find the column index by column name
            Row headerRow = sheet.getRow(0);
            int columnIndex = -1;
            for (Cell cell : headerRow) {
                if (cell.getStringCellValue().equals(columnName)) {
                    columnIndex = cell.getColumnIndex();
                    break;
                }
            }

            if (columnIndex == -1) {
                System.out.println("Column not found!");
                return columnValues;
            }

            // Iterate over rows and retrieve data from the specified column
            for (int i = 1; i <= sheet.getLastRowNum(); i++) {
                Row row = sheet.getRow(i);
                if (row != null) {
                    Cell cell = row.getCell(columnIndex);
                    if (cell != null && cell.getCellType() == cellType) {
                        // Add cell value to columnValues list
                        switch (cellType) {
                            case STRING:
                                columnValues.add(cell.getStringCellValue());
                                break;
                            case NUMERIC:
                                columnValues.add(cell.getNumericCellValue());
                                break;
                            case BOOLEAN:
                                columnValues.add(cell.getBooleanCellValue());
                                break;
                            // Handle other cell types if necessary
                        }
                    }
                }
            }
        } catch (IOException | InvalidFormatException e) {
            e.printStackTrace();
        }

        return columnValues;
    }
}