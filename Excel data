import org.apache.poi.ss.usermodel.*;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

import java.io.FileInputStream;
import java.io.IOException;

public class ExcelReader {

    public static void main(String[] args) {
        String excelFilePath = "path/to/your/excel/file.xlsx";
        String sheetName = "Sheet1";
        String searchName = "John Doe";

        try (FileInputStream inputStream = new FileInputStream(excelFilePath);
             Workbook workbook = new XSSFWorkbook(inputStream)) {

            Sheet sheet = workbook.getSheet(sheetName);
            int rowIndex = findRowIndex(sheet, searchName);

            if (rowIndex == -1) {
                System.out.println("Name not found in the Excel sheet");
                return;
            }

            Row row = sheet.getRow(rowIndex);

            // Assuming that the numeric and string values are in the next cells in the same row
            Cell numericCell = row.getCell(row.getLastCellNum());
            Cell stringCell = row.getCell(row.getLastCellNum() + 1);

            double numericValue = numericCell.getNumericCellValue();
            String stringValue = stringCell.getStringCellValue();

            System.out.println("Numeric Value: " + numericValue);
            System.out.println("String Value: " + stringValue);

        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    private static int findRowIndex(Sheet sheet, String searchName) {
        for (Row row : sheet) {
            Cell cell = row.getCell(0); // Assuming the name is in the first column

            if (cell != null && cell.getCellType() == CellType.STRING
                    && cell.getStringCellValue().equals(searchName)) {
                return row.getRowNum();
            }
        }
        return -1; // Name not found
    }
}