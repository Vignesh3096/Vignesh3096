import { execFile } from "child_process";

export class SikuliUtil {
  private static jarPath = "libs/sikuliUtility-1.0-SNAPSHOT-jar-with-dependencies.jar";

  static runSikuli(method: string, args: string[] = []): Promise<void> {
    return new Promise((resolve, reject) => {
      execFile("java", [
        "-jar",
        this.jarPath,
        method,
        ...args
      ], (error, stdout, stderr) => {
        if (error) {
          console.error("Sikuli Error:", stderr);
          reject(error);
        } else {
          console.log("Sikuli Output:", stdout);
          resolve();
        }
      });
    });
  }
}