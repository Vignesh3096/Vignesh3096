import org.jvnet.com4j.*;

public class ExcelFileSaver {

    public static void main(String[] args) {
        saveAllExcelFiles();
        closeExcel();
    }

    public static void saveAllExcelFiles() {
        ComThread.InitMTA(true);
        try {
            ExcelApplication excel = ExcelApplicationFactory.createExcelApplication();
            Dispatch workbooks = excel.getWorkbooks();
            int count = Dispatch.get(workbooks, "Count").getInt();
            for (int i = 1; i <= count; i++) {
                Dispatch workbook = Dispatch.call(workbooks, "Item", i).toDispatch();
                Dispatch.call(workbook, "Save");
                Dispatch.call(workbook, "Close", false);
            }
            excel.quit();
        } catch (ComException e) {
            e.printStackTrace();
        } finally {
            ComThread.Release();
        }
    }

    public static void closeExcel() {
        try {
            Runtime.getRuntime().exec("taskkill /f /im excel.exe");
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}