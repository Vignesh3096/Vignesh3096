import com4j.*;
import java.io.*;

public class ExcelFileSaver {

    public static void main(String[] args) {
        saveAllExcelFiles();
        closeExcel();
    }

    public static void saveAllExcelFiles() {
        try {
            Com4jObject excelApp = Com4jObject.createInstance("{Excel.Application}");
            Dispatch excel = excelApp.queryInterface(Dispatch.class);
            Dispatch workbooks = Dispatch.get(excel, "Workbooks").toDispatch();
            int count = Dispatch.call(workbooks, "Count").getInt();
            for (int i = 1; i <= count; i++) {
                Dispatch workbook = Dispatch.call(workbooks, "Item", i).toDispatch();
                Dispatch.call(workbook, "Save");
                Dispatch.call(workbook, "Close", false);
            }
            Dispatch.call(excel, "Quit");
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    public static void closeExcel() {
        try {
            Runtime.getRuntime().exec("taskkill /f /im excel.exe");
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}